<h2>{{ section.settings.title }}</h2>

<div style="display: flex; justify:content-center; gap:20px;">
    {% for block in section.blocks %}
        {% if  block in section.blocks %}
           <div style="display:flex; flext-direction:column;gap: 10px;">
            <h3>{{section.settings.title }}</h3>
            {{block.settings.image| image_url:width:500 | image_url}}
           </div>
    
        {%end if%}
    {%end for%}


</div>
{% schema %}


  {
    "name": "prmotions Group",
    "tag": "section",
    "class": "my-wrapper-class",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      },
      {
        "type":"select",
        "label":"Title Alignment",
        "id":"title_alignment",
        "options": [
            {
                "value": "left",
                "label":"left"

            },
            {
                "value": "center",
                "label":"center"

            },{
                "value": "right",
                "label":"right"

            }
        ],
        "default": "left"
    }
    ],
    "blocks": [{
        "type": "prmotion",
        "name":"prmotion",
        "settings": [{
            "type":"text",
            "id": "title",
            "label": "Title"
        },
        {
            "type":"image_picker",
            "id": "image",
            "label": "Image"

        }
    ]
    }],
    
    "presets": [
      {
        "name": "prmotions Group"
      }
    ]

  }
{% endschema %}